{
  "name": "hyperons",
  "version": "0.1.1",
  "description": "Renders components written in JSX to HTML without a framework.",
  "main": "dist/cjs.js",
  "module": "dist/esm.js",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "prepare": "npm run build",
    "pretest": "npm run build && npm run test:build",
    "test:node": "mocha test/spec.js",
    "test:browser": "mocha-headless-chrome -f test/runner.html -r dot",
    "test:build": "rollup -c test/rollup.config.js",
    "test:lint": "prettier --config .prettierrc.json --list-different src/**.js test/**.js",
    "test": "npm run test:lint && npm run test:node && npm run test:browser"
  },
  "keywords": [
    "html",
    "hyperscript",
    "jsx",
    "renderer",
    "strings"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i-like-robots/hyperons.git"
  },
  "author": "Matt Hinchliffe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/i-like-robots/hyperons/issues"
  },
  "homepage": "https://github.com/i-like-robots/hyperons",
  "devDependencies": {
    "buble": "^0.19.3",
    "chai": "^4.1.2",
    "mocha": "^5.0.5",
    "mocha-headless-chrome": "^1.8.3",
    "prettier": "^1.11.1",
    "rollup": "^0.57.1",
    "rollup-plugin-commonjs": "^9.1.0"
  },
  "engines": {
    "node": ">=6.0.0"
  }
}
